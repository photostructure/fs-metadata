{
  "name": "@photostructure/fs-metadata",
  "version": "0.0.1",
  "description": "Cross-platform native filesystem metadata retrieval for Node.js",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "// exports": "https://nodejs.org/api/packages.html#conditional-exports",
  "exports": {
    ".": {
      "require": {
        "default": "./lib/cjs/index.cjs",
        "types": "./lib/cjs/index.d.ts"
      },
      "import": {
        "default": "./lib/esm/index.js",
        "types": "./lib/esm/index.d.ts"
      }
    }
  },
  "homepage": "https://photostructure.github.io/fs-metadata/",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/photostructure/fs-metadata.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "scripts": {
    "install": "node-gyp-build",
    "clean": "run-p clean:*",
    "clean:dist": "rimraf dist",
    "clean:gyp": "node-gyp clean",
    "// scripts/configure.js checks if gio is installed": "",
    "configure": "node scripts/configure.mjs",
    "// prebuild": "is called by .github/workflows/build.yml",
    "preprebuild": "run-s clean configure",
    "prebuild": "prebuildify --napi --strip",
    "tsc": "run-p tsc:*",
    "tsc:esm": "tsc -p tsconfig.json",
    "tsc:cjs": "tsc -p tsconfig.cjs.json",
    "tsc:tests": "tsc -p tsconfig.test.json",
    "watch": "tsc -p tsconfig.test.json --watch",
    "docs": "typedoc --out docs src/index.ts",
    "jest:coverage": "jest --coverage",
    "jest:watch": "jest --watch",
    "jest:clear": "jest --clearCache",
    "// tests": "is called by .github/workflows/test.yml",
    "pretest": "run-s clean jest:clear tsc lint",
    "tests": "run-s test test:memory",
    "test": "node --experimental-vm-modules --trace-warnings node_modules/jest/bin/jest.js",
    "// test:memory:todo": "set up valgrind or similar",
    "test:memory": "cross-env TEST_MEMORY=1 node --expose-gc --experimental-vm-modules node_modules/jest/bin/jest.js src/__tests__/memory.test.ts",
    "it": "run-s clean fmt lint prebuild tsc tests",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "fmt": "run-p fmt:*",
    "// fmt:cpp": "on ubuntu: `sudo apt install clang-format`",
    "fmt:cpp": "clang-format --style=LLVM -i src/*/*.cpp src/*/*.h || true",
    "fmt:js": "prettier --write \"scripts/**/*.?js\" \"*.?js\"",
    "fmt:json": "prettier --write \"**/*.json\"",
    "fmt:pkg": "npm pkg fix",
    "fmt:ts": "prettier --write \"src/**/*.ts\"",
    "prepack": "npm run build",
    "// prepublishOnly": "could be `npm test`, but instead we look to GHA for full a matrix pass instead."
  },
  "gypfile": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "keywords": [
    "filesystem",
    "metadata",
    "native",
    "node-addon",
    "windows",
    "linux",
    "macos",
    "cross-platform"
  ],
  "release-it": {
    "src": {
      "tagName": "v%s",
      "commitArgs": "-S",
      "tagArgs": "-S"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "node-addon-api": "^8.2.2",
    "node-gyp-build": "^4.8.4"
  },
  "why-eslint-9.14.0": "https://github.com/typescript-eslint/typescript-eslint/issues/10338",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-extended": "^4.0.2",
    "node-gyp": "^10.2.0",
    "npm-run-all": "4.1.5",
    "prebuildify": "^6.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "release-it": "^17.10.0",
    "rimraf": "^6.0.1",
    "terser": "^5.36.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  }
}
