# AddressSanitizer runtime options for @photostructure/fs-metadata
# These options are loaded via ASAN_OPTIONS environment variable

# Leak detection
detect_leaks=1
leak_check_at_exit=1

# Error handling
halt_on_error=0
exitcode=1

# Output formatting
print_stats=1
print_module_map=1
print_legend=1
symbolize=1

# Stack traces
print_full_thread_history=1
malloc_context_size=10

# Performance tuning
quarantine_size_mb=256
redzone=128

# Suppressions are handled via LSAN_OPTIONS

# Debugging helpers
check_initialization_order=1
strict_init_order=1
intercept_tls_get_addr=0

# Color output
color=always